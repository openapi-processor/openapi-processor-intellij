<idea-plugin>
    <id>io.openapiprocessor.intellij</id>
    <name>openapi-processor</name>
    <vendor>openapiprocessor.io</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.plugins.yaml</depends>
    <depends>com.intellij.java</depends>
<!--    <depends optional="true" config-file="io.openapiprocessor.intellij-swagger.xml">com.intellij.swagger</depends>-->

    <extensions defaultExtensionNs="com.intellij">
        <fileType
            name="openapi-processor mapping v4"
            implementationClass="io.openapiprocessor.intellij.TypeMappingFileTypeV4"/>

        <fileType
            name="openapi-processor mapping v3"
            implementationClass="io.openapiprocessor.intellij.TypeMappingFileTypeV3"/>

        <fileType
            name="openapi-processor mapping v2.1"
            implementationClass="io.openapiprocessor.intellij.TypeMappingFileTypeV21"/>

        <fileType
            name="openapi-processor mapping v2"
            implementationClass="io.openapiprocessor.intellij.TypeMappingFileTypeV2"/>

        <codeInsight.lineMarkerProvider
            language="yaml"
            implementationClass="io.openapiprocessor.intellij.TypeMappingLineMarker"/>
        <codeInsight.lineMarkerProvider
            language="yaml"
            implementationClass="io.openapiprocessor.intellij.TypeMappingPathLineMarker"/>
    </extensions>

    <extensions defaultExtensionNs="JavaScript.JsonSchema">
        <ProviderFactory implementation="io.openapiprocessor.intellij.TypeMappingSchema"/>
    </extensions>

</idea-plugin>
