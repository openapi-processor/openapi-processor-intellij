<idea-plugin>
    <id>io.openapiprocessor.intellij-plugin</id>
    <name>openapi-processor</name>
    <vendor>io.openapiprocessor</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.hauner.openapiprocessorintellij.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.hauner.openapiprocessorintellij.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.hauner.openapiprocessorintellij.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
