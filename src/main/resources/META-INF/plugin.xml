<idea-plugin>
    <id>io.openapiprocessor.intellij</id>
    <name>openapi-processor</name>
    <vendor>openapiprocessor.io</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.plugins.yaml</depends>
    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">

        <fileType name="openapi-processor mapping"
                  implementationClass="io.openapiprocessor.intellij.TypeMappingFileType"/>

<!--        <fileBasedIndex implementation="io.openapiprocessor.intellij.TypeMappingIndex"/>-->

        <codeInsight.lineMarkerProvider
                language="yaml"
                implementationClass="io.openapiprocessor.intellij.TypeMappingLineMarker"/>

    </extensions>

    <extensions defaultExtensionNs="JavaScript.JsonSchema">
        <ProviderFactory implementation="io.openapiprocessor.intellij.TypeMappingSchema"/>
    </extensions>

</idea-plugin>
