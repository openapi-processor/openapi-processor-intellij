<idea-plugin>
    <id>io.openapiprocessor.intellij</id>
    <name>openapi-processor</name>
    <vendor>https://openapiprocessor.io</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.plugins.yaml</depends>
    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">

        <fileType name="openapi-processor mapping"
                  fileNames="mapping.yaml;mapping.yml"
                  patterns="**/api/mapping.yaml;**/api/mapping.yml"
                  implementationClass="io.openapiprocessor.intellij.TypeMapping"/>

<!--        <codeInsight.lineMarkerProvider-->
<!--                language="yaml"-->
<!--                implementationClass="io.openapiprocessor.intellij.LineMarker"/>-->

    </extensions>

    <extensions defaultExtensionNs="JavaScript.JsonSchema">
        <ProviderFactory implementation="io.openapiprocessor.intellij.TypeMappingSchema"/>
    </extensions>

</idea-plugin>
